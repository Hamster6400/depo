import random
import asyncio
import discord

async def dogru_mu(bot, channel):
    cevap = random.randint(1, 10)

    # KullanÄ±cÄ±ya oyun baÅŸladÄ±ÄŸÄ±nÄ± belirten bir mesaj gÃ¶nderiyoruz
    await channel.send("Tahmin oyunu baÅŸladÄ±! ğŸ® 1 ile 10 arasÄ±nda bir sayÄ± tahmin et ve 5 saniye iÃ§inde yanÄ±tla.")

    def check(m):
        return m.channel == channel and m.content.isdigit()

    try:
        # KullanÄ±cÄ±dan tahmin bekliyoruz (5 saniye sÃ¼re tanÄ±nÄ±yor)
        tahmin = await bot.wait_for('message', check=check, timeout=5.0)
    except asyncio.TimeoutError:
        # Zaman aÅŸÄ±mÄ± durumunda mesaj gÃ¶nderiyoruz
        await channel.send(f'ÃœzgÃ¼nÃ¼m, Ã§ok uzun sÃ¼rdÃ¼. Cevap {cevap} idi.')
        return

    if int(tahmin.content) == cevap:
        await channel.send('DoÄŸru bildin! ğŸ‰')
    else:
        await channel.send(f'Maalesef. DoÄŸru cevap {cevap} idi. ğŸ˜”')
